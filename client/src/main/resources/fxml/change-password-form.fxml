<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<DialogPane fx:id="dialogPane" expanded="true" stylesheets="@../css/dialog.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.nicoleperak.client.controllers.dialogs.ChangePasswordDialogController">
    <content>
        <VBox alignment="CENTER">
            <GridPane hgap="20.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="New Password" textFill="#fbf9f8"
                       GridPane.halignment="LEFT">
                    <font>
                        <Font name="Source Sans 3 Medium" size="14.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="10.0" layoutY="16.0"
                       text="Retype New Password" textFill="#fbf9f8" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                    <font>
                        <Font name="Source Sans 3 Medium" size="14.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                               minWidth="-Infinity" prefHeight="28.0" prefWidth="250.0"
                               style="-fx-background-color: #FBF9F8;" GridPane.columnIndex="1">
                    <font>
                        <Font name="Source Sans 3 Regular" size="13.0"/>
                    </font>
                </PasswordField>
                <PasswordField fx:id="retypePasswordField" layoutX="162.0" layoutY="11.0" maxHeight="-Infinity"
                               maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                               onKeyTyped="#onKeyTypedInRetypedPasswordField" prefHeight="28.0" prefWidth="250.0"
                               style="-fx-background-color: #FBF9F8;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="Source Sans 3 Regular" size="13.0"/>
                    </font>
                </PasswordField>
            </GridPane>
            <Label fx:id="alertMessageLabel" alignment="CENTER" textFill="#f3de8a" wrapText="true">
                <VBox.margin>
                    <Insets bottom="-10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font name="Source Sans 3 Regular" size="13.0"/>
                </font>
            </Label>
        </VBox>
    </content>
    <header>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <Label text="Change Password" textFill="#fbf9f8">
                <font>
                    <Font name="Source Sans 3 Medium" size="18.0"/>
                </font>
            </Label>
        </HBox>
    </header>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
    <ButtonType fx:constant="FINISH"/>
    <ButtonType fx:constant="CANCEL"/>
</DialogPane>
